---
layout: default
---

<!-- Hero Background Section -->
<div class="hero-bg">
  <div class="hero-content">
    <h1>
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }} {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="lead">{{ page.subtitle }}</p>
    
    {% if page.profile and page.profile.image %}
      <div class="hero-profile-image" style="margin: 2rem 0;">
        {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
        {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
        {% capture sizes %}200px{% endcapture %}
        <img src="{{ profile_image_path | relative_url | bust_file_cache }}" 
             class="{{ profile_image_class }}" 
             alt="{{ page.profile.image }}"
             style="width: 200px; height: 200px; object-fit: cover; border: 4px solid rgba(255,255,255,0.3); box-shadow: 0 10px 30px rgba(0,0,0,0.3);">
      </div>
    {% endif %}
    
    <div class="cta-buttons">
      <a href="#about" class="btn-hero btn-primary">
        <i class="fas fa-user"></i>
        Learn More
      </a>
      <a href="#publications" class="btn-hero btn-outline">
        <i class="fas fa-book"></i>
        Publications
      </a>
    </div>
  </div>
</div>

<!-- Main Content Section -->
<div class="post" id="about" style="background: var(--global-bg-color); margin-top: -100px; position: relative; z-index: 10; border-radius: 2rem 2rem 0 0; box-shadow: 0 -10px 30px rgba(0,0,0,0.1);">
  <article style="padding: 4rem 2rem 2rem;">
    
    <!-- About Content -->
    <div class="container" style="max-width: 800px; margin: 0 auto;">
      {% if page.profile and page.profile.more_info %}
        <div class="profile-info-card">
          <div class="more-info">{{ page.profile.more_info }}</div>
        </div>
      {% endif %}

      <div class="about-content-enhanced">
        {{ content }}
      </div>
      
      <!-- Key Highlights Cards -->
      <div class="highlights-section">
        <div class="highlights-grid">
          <div class="highlight-card">
            <div class="highlight-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
            <h3>Ph.D. in CS</h3>
            <p>National Tsing Hua University</p>
          </div>
          
          <div class="highlight-card">
            <div class="highlight-icon">
              <i class="fas fa-microchip"></i>
            </div>
            <h3>21+ Years</h3>
            <p>Industry Experience</p>
          </div>
          
          <div class="highlight-card">
            <div class="highlight-icon">
              <i class="fas fa-rocket"></i>
            </div>
            <h3>GradInnovate</h3>
            <p>Founder & CEO</p>
          </div>
          
          <div class="highlight-card">
            <div class="highlight-icon">
              <i class="fas fa-brain"></i>
            </div>
            <h3>AI4EDA</h3>
            <p>Research Expert</p>
          </div>
        </div>
      </div>
    </div>

    <!-- News Section -->
    {% if page.announcements and page.announcements.enabled %}
      <div class="section-bg bg-1" style="margin: 4rem -2rem 2rem; padding: 0; border-radius: 1rem; overflow: hidden;">
        <div class="section-content" style="padding: 3rem 2rem;">
          <div class="container" style="max-width: 800px; margin: 0 auto; text-align: center;">
            <h2>
              <a href="{{ '/news/' | relative_url }}" style="color: white; text-decoration: none;">
                <i class="fas fa-newspaper"></i> Latest News
              </a>
            </h2>
            {% include news.liquid limit=true %}
          </div>
        </div>
      </div>
    {% endif %}

    <!-- Latest Posts Section -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <div class="container" style="max-width: 800px; margin: 4rem auto;">
        <h2 style="text-align: center; margin-bottom: 2rem;">
          <a href="{{ '/blog/' | relative_url }}" style="color: inherit; text-decoration: none;">
            <i class="fas fa-blog text-gradient"></i> Latest Posts
          </a>
        </h2>
        {% include latest_posts.liquid %}
      </div>
    {% endif %}

    <!-- Selected Papers Section -->
    {% if page.selected_papers %}
      <div class="section-bg bg-3" style="margin: 4rem -2rem 2rem; padding: 0; border-radius: 1rem; overflow: hidden;" id="publications">
        <div class="section-content" style="padding: 3rem 2rem;">
          <div class="container" style="max-width: 900px; margin: 0 auto; text-align: center;">
            <h2>
              <a href="{{ '/publications/' | relative_url }}" style="color: white; text-decoration: none;">
                <i class="fas fa-graduation-cap"></i> Selected Publications
              </a>
            </h2>
            {% include selected_papers.liquid %}
          </div>
        </div>
      </div>
    {% endif %}

    <!-- Personal Gallery Section -->
    <div class="personal-gallery-section" style="margin: 4rem 0;">
      <div class="container" style="max-width: 900px; margin: 0 auto;">
        <h2 style="text-align: center; margin-bottom: 3rem;">
          <i class="fas fa-camera text-gradient"></i> Behind the Research
        </h2>
        
        <!-- Photo Gallery Grid -->
        <div class="photo-gallery-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; margin-bottom: 3rem;">
          <div class="photo-card">
            <img src="{{ '/assets/img/me-001.jpg' | relative_url }}" alt="Research in action" class="gallery-img">
            <div class="photo-overlay">
              <p class="photo-caption">Research in action</p>
            </div>
          </div>
          <div class="photo-card">
            <img src="{{ '/assets/img/me-002.jpg' | relative_url }}" alt="Conference presentation" class="gallery-img">
            <div class="photo-overlay">
              <p class="photo-caption">Sharing insights</p>
            </div>
          </div>
          <div class="photo-card">
            <img src="{{ '/assets/img/me-003.jpg' | relative_url }}" alt="Collaborative work" class="gallery-img">
            <div class="photo-overlay">
              <p class="photo-caption">Collaborative moments</p>
            </div>
          </div>
        </div>

        <!-- View More Link -->
        <div class="text-center">
          <a href="{{ '/gallery/' | relative_url }}" class="btn-modern">
            <i class="fas fa-images"></i>
            View Full Gallery
            <small style="display: block; font-size: 0.8em; margin-top: 0.25rem; opacity: 0.8;">
              See all {{ site.data.personal_photos.count | default: "8" }} photos
            </small>
          </a>
        </div>
        
      </div>
    </div>

    <!-- Social Section -->
    {% if page.social %}
      <div class="social-section" style="text-align: center; margin: 4rem 0;">
        <h2 style="margin-bottom: 2rem;">
          <i class="fas fa-share-alt text-gradient"></i> Connect With Me
        </h2>
        <div class="social">
          <div class="contact-icons" style="justify-content: center; gap: 1rem;">
            {% include social.liquid %}
          </div>
          {% if site.contact_note %}
            <div class="contact-note" style="margin-top: 1rem; font-style: italic; color: var(--global-text-color-light);">
              {{ site.contact_note }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>

<style>
  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Fade-in animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes pulse {
    0% {
      box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }
    50% {
      box-shadow: 0 4px 25px rgba(99, 102, 241, 0.5);
    }
    100% {
      box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }
  }
  
  /* Apply animations to elements */
  .profile-info-card {
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }
  
  .about-content-enhanced {
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }
  
  .highlights-section {
    animation: fadeInUp 0.6s ease-out 0.6s both;
  }
  
  .highlight-card:nth-child(1) { animation: fadeInLeft 0.6s ease-out 0.8s both; }
  .highlight-card:nth-child(2) { animation: fadeInLeft 0.6s ease-out 1.0s both; }
  .highlight-card:nth-child(3) { animation: fadeInLeft 0.6s ease-out 1.2s both; }
  .highlight-card:nth-child(4) { animation: fadeInLeft 0.6s ease-out 1.4s both; }
  
  .highlight-icon {
    animation: pulse 2s ease-in-out infinite;
  }
  
  .highlight-card:hover .highlight-icon {
    animation: none;
  }
  
  /* Enhanced Profile Info Card */
  .profile-info-card {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(16, 185, 129, 0.1));
    border-radius: 1.5rem;
    border: 1px solid var(--global-divider-color);
    backdrop-filter: blur(10px);
  }
  
  .profile-info-card .more-info p {
    margin: 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--global-text-color);
  }
  
  .profile-info-card .more-info p:first-child {
    font-size: 1.3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  /* Enhanced About Content */
  .about-content-enhanced {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 4rem;
  }
  
  .about-content-enhanced h2 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }
  
  .about-content-enhanced h2::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 3rem;
    height: 3px;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    border-radius: 2px;
  }
  
  .about-content-enhanced ul {
    list-style: none;
    padding-left: 0;
  }
  
  .about-content-enhanced ul li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
  }
  
  .about-content-enhanced ul li::before {
    content: 'â–¶';
    position: absolute;
    left: 0;
    color: var(--global-theme-color);
    font-weight: bold;
    transition: all 0.3s ease;
  }
  
  .about-content-enhanced ul li:hover {
    transform: translateX(0.5rem);
    color: var(--global-theme-color);
  }
  
  .about-content-enhanced ul li:hover::before {
    transform: scale(1.2);
  }
  
  /* Key Highlights Section */
  .highlights-section {
    margin: 4rem 0;
  }
  
  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
  }
  
  .highlight-card {
    background: var(--global-card-bg-color);
    border-radius: 1.5rem;
    padding: 2rem 1.5rem;
    text-align: center;
    border: 1px solid var(--global-divider-color);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .highlight-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .highlight-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--global-card-hover-shadow);
  }
  
  .highlight-card:hover::before {
    transform: scaleX(1);
  }
  
  .highlight-icon {
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.5rem;
    color: white;
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
  }
  
  .highlight-card h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--global-text-color);
    margin-bottom: 0.5rem;
  }
  
  .highlight-card p {
    font-size: 0.9rem;
    color: var(--global-text-color-light);
    margin: 0;
  }
  
  /* Enhanced social icons */
  .social .contact-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
  }
  
  .social .contact-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, var(--global-card-bg-color), rgba(255, 255, 255, 0.8));
    border-radius: 50%;
    color: var(--global-text-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    border: 2px solid transparent;
    font-size: 1.3rem;
    position: relative;
    overflow: hidden;
  }
  
  .social .contact-icons a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    opacity: 0;
    transition: opacity 0.4s ease;
    border-radius: 50%;
  }
  
  .social .contact-icons a i {
    position: relative;
    z-index: 2;
  }
  
  .social .contact-icons a:hover {
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    border-color: var(--global-theme-color);
    color: white;
  }
  
  .social .contact-icons a:hover::before {
    opacity: 1;
  }
  
  /* Specific social platform colors on hover */
  .social .contact-icons a[href*="linkedin.com"]:hover {
    box-shadow: 0 10px 30px rgba(0, 119, 181, 0.4);
  }
  
  .social .contact-icons a[href*="linkedin.com"]:hover::before {
    background: linear-gradient(135deg, #0077b5, #00a0dc);
  }
  
  .social .contact-icons a[href*="mailto:"]:hover {
    box-shadow: 0 10px 30px rgba(234, 67, 53, 0.4);
  }
  
  .social .contact-icons a[href*="mailto:"]:hover::before {
    background: linear-gradient(135deg, #ea4335, #d93025);
  }
  
  /* Personal Gallery Styles */
  .photo-card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 4/3;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .photo-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }
  
  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .photo-card:hover .gallery-img {
    transform: scale(1.05);
  }
  
  .photo-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    color: white;
    padding: 1.5rem 1rem 1rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }
  
  .photo-card:hover .photo-overlay {
    transform: translateY(0);
  }
  
  .photo-caption {
    margin: 0;
    font-weight: 500;
    text-align: center;
  }
  
  /* Gallery Link Button */
  .btn-modern {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--global-theme-color), var(--global-hover-color));
    color: white;
    text-decoration: none;
    border-radius: 0.75rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    margin-top: 1rem;
  }
  
  .btn-modern:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    color: white;
    text-decoration: none;
  }
  
  .btn-modern i {
    margin-right: 0.5rem;
  }
  


  /* Responsive adjustments */
  @media (max-width: 768px) {
    .post article {
      padding: 3rem 1rem 2rem !important;
    }
    
    .section-bg {
      margin-left: -1rem !important;
      margin-right: -1rem !important;
    }
    
    .photo-gallery-grid {
      grid-template-columns: 1fr !important;
    }
    
    .highlights-grid {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 1rem !important;
    }
    
    .highlight-card {
      padding: 1.5rem 1rem !important;
    }
    
    .highlight-icon {
      width: 3rem !important;
      height: 3rem !important;
      font-size: 1.2rem !important;
    }
    
    .profile-info-card {
      padding: 1.5rem !important;
      margin-bottom: 2rem !important;
    }
    
    .about-content-enhanced {
      font-size: 1rem !important;
      margin-bottom: 3rem !important;
    }
    
    .about-content-enhanced h2 {
      font-size: 1.5rem !important;
      margin-top: 2rem !important;
    }
    
    .hero-content h1 {
      font-size: 2rem !important;
    }
    
    .hero-content .lead {
      font-size: 1rem !important;
    }
    
    .cta-buttons {
      flex-direction: column !important;
      gap: 1rem !important;
    }
    
    .btn-hero {
      width: 100% !important;
      max-width: 250px !important;
    }
    
    .social .contact-icons {
      gap: 1rem !important;
    }
    
    .social .contact-icons a {
      width: 3.5rem !important;
      height: 3.5rem !important;
      font-size: 1.1rem !important;
    }
  }
  
  @media (max-width: 480px) {
    .highlights-grid {
      grid-template-columns: 1fr !important;
    }
    
    .social .contact-icons a {
      width: 3rem !important;
      height: 3rem !important;
      font-size: 1rem !important;
    }
  }
</style>
